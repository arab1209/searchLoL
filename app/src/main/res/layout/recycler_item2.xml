<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_cardview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="1dp"
        android:backgroundTint="#dce4f0"
        app:cardCornerRadius="3dp"
        app:cardElevation="1.5dp"
        app:cardUseCompatPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/championImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="@+id/bar"
                tools:ignore="MissingConstraints" />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/winslosseswhat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toEndOf="@+id/championImg"
                android:gravity =  "center|center"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/spell1Image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/winslosseswhat"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/spell2Image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/winslosseswhat"
                app:layout_constraintTop_toBottomOf="@+id/spell1Image"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/rune1Image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/spell1Image"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/rune2Image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/spell2Image"
                app:layout_constraintTop_toBottomOf="@+id/spell1Image"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/item1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/rune2Image"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/item2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/item1"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/item3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/item2"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/item4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/rune2Image"
                app:layout_constraintTop_toBottomOf="@+id/item1"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/item5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/item4"
                app:layout_constraintTop_toBottomOf="@+id/item2"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/item6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/item5"
                app:layout_constraintTop_toBottomOf="@+id/item3"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/kda"
                android:textColor="@color/white"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toEndOf="@+id/item6"
                android:gravity =  "center|center"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/wardgold"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@+id/kda"
                android:gravity =  "center|center"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>