<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textView"
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:hint="소환사 검색..." />

    <Button
        android:id="@+id/btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:backgroundTint="#50bcdf"
        android:text="검색"
        app:layout_constraintStart_toEndOf="@+id/textView"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoBackground"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        android:layout_marginTop="10dp"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/iconImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/infoBackground"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/userId"
            android:layout_width="200dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toEndOf="@+id/iconImage"
            app:layout_constraintTop_toTopOf="@+id/iconImage"
            android:layout_marginTop="5dp"

            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="test"
            />
        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iconImage"
            app:layout_constraintStart_toStartOf="@+id/userId"
            android:textSize="11dp"
            android:layout_marginTop="-8dp"
            android:textColor="@color/black"
            android:background="@drawable/drawable_textview"
            />
        <TextView
            android:id="@+id/winsLosses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/level"
            app:layout_constraintTop_toTopOf="@+id/level"
            android:layout_marginLeft="10dp"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:background="@drawable/drawable_textview"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/featuredGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행중인 게임 정보 보기"
        android:visibility="invisible"
        android:backgroundTint="#E2E2E2"
        android:textColor="#3fe87f"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/infoBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/featuredGameBtn" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tierImg"
        android:layout_width="193.8dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        android:layout_marginTop="10dp"
        android:background="@drawable/layoutborder"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/queueType"
            android:text="솔로랭크 5v5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tierImg"
            app:layout_constraintEnd_toEndOf="@+id/tierImg"
            app:layout_constraintTop_toTopOf="@+id/tierImg"
            android:layout_marginTop="10dp"
            android:textColor="@color/tierColor"
            />
        <ImageView
            android:id="@+id/tierImg2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="@+id/tierImg"
            app:layout_constraintEnd_toEndOf="@+id/tierImg"
            app:layout_constraintTop_toBottomOf="@+id/queueType"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ranking"
            app:layout_constraintStart_toStartOf="@+id/tierImg"
            app:layout_constraintEnd_toEndOf="@+id/tierImg"
            app:layout_constraintTop_toBottomOf="@+id/tierImg2"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tierName"
            app:layout_constraintStart_toStartOf="@+id/tierImg"
            app:layout_constraintEnd_toEndOf="@+id/tierImg"
            app:layout_constraintTop_toBottomOf="@+id/ranking"
            android:layout_marginTop="2dp"
            android:textColor="#008d62"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaguePoints"
            app:layout_constraintStart_toStartOf="@+id/tierImg"
            app:layout_constraintEnd_toEndOf="@+id/tierImg"
            app:layout_constraintTop_toBottomOf="@+id/tierName"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/winsLosses2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tierImg"
            app:layout_constraintEnd_toEndOf="@+id/tierImg"
            app:layout_constraintTop_toBottomOf="@+id/leaguePoints"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tierImg3"
        android:layout_width="193.8dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:layout_constraintStart_toEndOf="@+id/tierImg"
        android:layout_marginTop="10dp"
        android:background="@drawable/layoutborder"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/queueType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tierImg3"
            app:layout_constraintEnd_toEndOf="@+id/tierImg3"
            app:layout_constraintTop_toTopOf="@+id/tierImg3"
            android:layout_marginTop="10dp"
            android:text="자유랭크 5v5"
            android:textColor="@color/tierColor"
            />
        <ImageView
            android:id="@+id/tierImg4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="@+id/tierImg3"
            app:layout_constraintEnd_toEndOf="@+id/tierImg3"
            app:layout_constraintTop_toBottomOf="@+id/queueType2"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ranking2"
            app:layout_constraintStart_toStartOf="@+id/tierImg3"
            app:layout_constraintEnd_toEndOf="@+id/tierImg3"
            app:layout_constraintTop_toBottomOf="@+id/tierImg4"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tierName2"
            app:layout_constraintStart_toStartOf="@+id/tierImg3"
            app:layout_constraintEnd_toEndOf="@+id/tierImg3"
            app:layout_constraintTop_toBottomOf="@+id/ranking2"
            android:layout_marginTop="2dp"
            android:textColor="#008d62"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaguePoints2"
            app:layout_constraintStart_toStartOf="@+id/tierImg3"
            app:layout_constraintEnd_toEndOf="@+id/tierImg3"
            app:layout_constraintTop_toBottomOf="@+id/tierName2"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/winsLosses3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tierImg3"
            app:layout_constraintEnd_toEndOf="@+id/tierImg3"
            app:layout_constraintTop_toBottomOf="@+id/leaguePoints2"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:layout_constraintTop_toBottomOf="@+id/tierImg3"
        tools:layout_editor_absoluteX="5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>