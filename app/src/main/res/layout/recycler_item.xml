<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_cardview"
        android:layout_width="193.8dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:backgroundTint="#dce4f0"
        app:cardCornerRadius="3dp"
        app:cardElevation="1.5dp"
        app:cardUseCompatPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/friend"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/freindChampion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="@+id/friend"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/spell1Image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintEnd_toStartOf="@+id/freindChampion"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/spell2Image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toBottomOf="@+id/spell1Image"
                app:layout_constraintEnd_toStartOf="@+id/freindChampion"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/rune1Image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintEnd_toStartOf="@+id/spell1Image"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/rune2Image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toBottomOf="@+id/spell1Image"
                app:layout_constraintEnd_toStartOf="@+id/spell2Image"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/blueUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                app:layout_constraintEnd_toStartOf="@+id/rune2Image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="10dp"
                android:textSize="10dp"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/blueTier"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/friend"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="MissingConstraints" />
            <!--<TextView
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textSize="20dp" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/item_cardview2"
        android:layout_width="193.8dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:backgroundTint="#ffdfd4"

        app:cardCornerRadius="3dp"
        app:cardElevation="1.5dp"
        app:cardUseCompatPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/enemy"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/enemyChampion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@+id/enemy"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/spell1Image2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintStart_toEndOf="@+id/enemyChampion"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/spell2Image2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toBottomOf="@+id/spell1Image2"
                app:layout_constraintStart_toEndOf="@+id/enemyChampion"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/rune1Image2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintStart_toEndOf="@+id/spell1Image2"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/rune2Image2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toBottomOf="@+id/spell1Image2"
                app:layout_constraintStart_toEndOf="@+id/spell2Image2"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/redUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                app:layout_constraintStart_toEndOf="@+id/rune2Image2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/redTier"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/enemy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="5dp"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="MissingConstraints" />
            <!--<TextView
                android:id="@+id/test2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textSize="20dp" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>